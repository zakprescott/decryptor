{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "overrides": [
    {
      "files": ["**/test/**"],
      "env": {
        "jest": true
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "indent": ["error", "tab"],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  },
  "extends": [
      "eslint:recommended",
      "prettier"
  ]
}
